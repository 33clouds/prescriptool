<% content_for :meta_title, "Your archived prescriptions" %>
<div class="row justify-content-center">
  <div class="cards" data-controller="prescription-list">
    <% @prescriptions.each do |prescription| %>
      <div class="card" data-action="click->prescription-list#toggleItem" data-prescription-list-target="card">
        <div class="title">
          <h6>Prescription</h6>
        </div>
        <p class="container-date"><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <p class="container-doctor">Doctor <%= prescription.professional.last_name%></p>
        <p><%= prescription.professional.address %></p>
        <div class="content">
          <p id="p1"><%= prescription.patient.first_name%> <%=prescription.patient.last_name %> </p>
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <%= med_prescription.med.name %>
            <%= med_prescription.dosage %>
          <% end %>
        </div>
        <p id="important">This prescription has already been delivered: please do not deliver more!</p>
        <p id="p2"><em>Prescription generated by Prescriptool</em></p>
      </div>
    <% end %>
  </div>
</div>

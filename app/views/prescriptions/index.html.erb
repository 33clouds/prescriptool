<div class="row justify-content-center">
  <div class="cards">
    <% current_user.pro ? prescriptions = @prescriptions_pro : prescriptions = @prescriptions %>
    <% prescriptions.each do |prescription| %>
      <div class="card">
        <div class="title">
          <h6>Prescription</h6>
          <%= image_tag "qrcode.jpeg", class: "qrcode" %>
        </div>
        <p class="container-date"><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <p class="container-doctor">Doctor <%= prescription.professional.last_name%></p>
        <p><%= prescription.professional.address %></p>
        <div class="content">
          <p id="p1"> Please deliver to: <%= prescription.patient.first_name%> <%=prescription.patient.last_name %> </p>
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <%= med_prescription.med.name %>
            <%= med_prescription.dosage%>
            <div class="refill-item">
              <p><%= med_prescription.refill%>time(s)</p>
            </div>
          <% end %>
        </div>
        <% if !prescription.archived? && current_user.pro  %>
          <div class="container-button-archived">
            <%= simple_form_for(prescription, url: archive_prescription_path(prescription)) do |f| %>
              <%= f.input :archived, :label => "SCAN QRCODE", as: :boolean, input_html: { class: "toggle", onchange: 'this.form.submit()' }  %>
            <% end %>
          </div>
        <% end %>
        <p id="p2"><em>Prescription generated by Prescriptool</em></p>
      </div>
    <% end %>
  </div>
</div>

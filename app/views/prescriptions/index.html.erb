<div class="container">
  <div class="cards">
    <% @prescriptions.each do |prescription| %>
      <div class="card">
        <div class="title">
          <h6>Prescription</h6>
          <%= image_tag "qrcode.jpeg", class: "qrcode" %>
        </div>
        <p class="container-date"><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <div class="content">
          <p>Please deliver to <%= prescription.patient.first_name%> <%=prescription.patient.last_name %> </p>
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <%= med_prescription.med.name %>
            <%= med_prescription.dosage %>
            <p class="container-doctor">Doctor <%= prescription.professional.last_name%></p>
          <% end %>
        </div>
        <a class="btn btn-gradient" href="#">Select this prescription</a>
      </div>
    <% end %>
  </div>
</div>
<div class="container-image">
  <%= image_tag "prescription1.png", class: "prescription1.png" %>
</div>

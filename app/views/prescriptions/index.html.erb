<div class="row justify-content-center">
  <div class="col-sm-12 col-lg-8" id="cards">
    <div class="container-image">
      <%= image_tag "prescription1.png", class: "prescription1.png" %>
    </div>
    <% @prescriptions.each do |prescription| %>
      <div class="col-sm-12 col-lg-12" id="card">
        <div class="title">
          <h6>Prescription</h6>
          <%= image_tag "qrcode.jpeg", class: "qrcode" %>
        </div>
        <p class="container-date"><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <p class="container-doctor">Doctor <%= prescription.professional.last_name%></p>
        <%# <p><%= prescription.professional.specialties.first.name%>
        <p><%= prescription.professional.address %></p>
        <div class="content">
          <p id="p1"> Please deliver to: <%= prescription.patient.first_name%> <%=prescription.patient.last_name %> </p>
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <%= med_prescription.med.name %>
            <%= med_prescription.dosage %>
          <% end %>
        </div>
        <%= link_to "Select this prescription", prescription_path(prescription), class: "btn btn-gradient" %>
        <p id="p2"><em>This prescription is generated by Prescriptool</em></p>
      </div>
    <% end %>
  </div>
</div>

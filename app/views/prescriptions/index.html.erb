<div class="row justify-content-center">
  <div class="cards" data-controller="prescription-list">
    <% @prescriptions.each do |prescription| %>
      <div class="card" data-action="click->prescription-list#toggle" data-prescription-list-target="card">

        <p>Dr. <%= prescription.professional.last_name%></p>
        <p><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <div class="preview">
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <p><i class="fa-solid fa-pills"></i> <%= med_prescription.med.name %></p>
          <% end %>
        </div>
        <div class="content">
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <p><i class="fa-solid fa-pills"></i> <%= med_prescription.med.name %></p>
            <p>Directions <%= med_prescription.dosage %></p>
          <% end %>

          <p>Please deliver to: <%= prescription.patient.first_name %> <%=prescription.patient.last_name %> </p>
          <p>Dr. <%= prescription.professional.last_name%> <%= prescription.professional.address %></p>
          <p>#<%= prescription.id %></p>
          <%= image_tag "qrcode.jpeg", class: "qrcode" %>
        </div>
      </div>
    <% end %>

    <% @my_prescribed.each do |prescription| %>
      <div class="card" data-action="click->prescription-list#toggle" data-prescription-list-target="card">
        <div class="title">
          <h6>Prescription</h6>
          <%= image_tag "qrcode.jpeg", class: "qrcode" %>
        </div>
        <p class="container-date"><%= prescription.created_at.strftime('%a %d %b %Y') %></p>
        <p class="container-doctor">Doctor <%= prescription.professional.last_name%></p>
        <p><%= prescription.professional.address %></p>
        <div class="content">
          <p id="p1"> Please deliver to: <%= prescription.patient.first_name%> <%=prescription.patient.last_name %> </p>
          <% prescription.meds_prescriptions.each do |med_prescription| %>
            <%= med_prescription.med.name %>
            <%= med_prescription.dosage %>
          <% end %>
        </div>
        <%= link_to "Select this prescription", prescription_path(prescription), class: "btn btn-gradient" %>
        <p id="p2"><em>Prescription generated by Prescriptool</em></p>
      </div>
    <% end %>
  </div>
</div>

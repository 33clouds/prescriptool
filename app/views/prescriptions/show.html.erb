<div class="container-prescription-show">
  <%# <div class="container-relative"> %>
  <div class="d-flex justify-content-between">
    <h3>Prescription <%= @prescription.id %></h3>
    <div class="qrcode-show">
      <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <%= @svg.html_safe %>
      </a>
    </div>
  </div>
  <p class="container-doctor">Doctor <%= @prescription.professional.last_name%></p>
  <p class="container-doctor"><%= @prescription.professional.address%></p>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog d-flex justify-content-center w-full mt-4">
      <div class="modal-content w-60 rounded-4">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex justify-content-center p-3">
          <%= @svg_big.html_safe %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <p class="container-date"><%= @prescription.created_at.strftime('%a %d %b %Y') %></p>
    <div class="content">
      <p><u>Please deliver to <%= @prescription.patient.first_name%> <%=@prescription.patient.last_name %> </u></p>
      <% @prescription.meds_prescriptions.each do |med_prescription| %>
        <%= med_prescription.med.name %>
        <%= med_prescription.dosage %>
      <% end %>
    </div>
  </div>
  <% unless @prescription.archived? %>
    <div class="container-button-archived">
      <%# <%= simple_form_for(@prescription, url: archive_prescription_path(@prescription)) do |f| %>
        <%# <%= f.input :archived, :label => "SCAN QRCODE", as: :boolean, input_html: { class: "toggle", onchange: 'this.form.submit()' }  %>
        <%# <% end %>
      </div>
    <% end %>
    <div class="seal">
      <p id="p2"><em>Prescription generated by Prescriptool</em></p>
    </div>
    <%# </div> %>
  </div>
